import scrapy


class ForumSpider(scrapy.Spider):
    name = "forum"

    def start_requests(self):
        urls = [
            'https://www.matrimonio.com/forum/recenti'
        ]
        for url in urls:
            yield scrapy.Request(url=url, callback=self.parse)

    def parse_topic(self, response):
        print('yay')

    def parse(self, response):
        #filename = 'forum-recenti.html'
        #with open(filename, 'wb') as f:
        #    f.write(response.body)
        for topic_link in response.xpath('//div[@class="discussion-post-item "]//a[@class="discussion-post-item-title"]/@href').getall():
            yield response.follow(topic_link, callback=self.parse_topic)

        # example from tutorial
        #for quote in response.css('div.quote'):
        #    yield {
        #        'text': quote.xpath('blabla').get(),
        #        'author': blabla
        #    }
        #next_page = response.css('li.next a::attr(href)').get()
        #for a in response.css('li.next a'):
        #    yield response.follow(a, callback=self.parse)
